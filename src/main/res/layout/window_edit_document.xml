<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/creationwindowbar"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/editDocumentName"
        android:layout_width="240dp"
        android:layout_height="45dp"

        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"


        android:background="@null"
        android:hint="Rename"
        android:maxLength="24"
        android:singleLine="true"
        android:textColor="#fff"
        android:textColorHint="#55ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/applyButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/editDocumentName"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/editDocumentName"
        android:layout_toRightOf="@+id/editDocumentName"
        android:background="#33ffffff"
        android:foreground="@drawable/ic_check"
        android:textColor="#fff" />
</RelativeLayout>